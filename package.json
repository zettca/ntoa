{
  "name": "ntoa",
  "version": "0.1.0",
  "description": "Convert from Number to its name in multiple number scales",
  "license": "MIT",
  "author": "zettca",
  "repository": {
    "type": "git",
    "url": "https://github.com/zettca/ntoa"
  },
  "keywords": [
    "cli",
    "lib",
    "itoa",
    "numbers"
  ],
  "bin": "./dist/cjs/bin.js",
  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "dev": "nodemon",
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel clean build:*",
    "build:tsc": "tsc",
    "build:cjs": "esbuild src/index.ts src/bin.ts --platform=node --format=cjs --outdir=dist/cjs --minify --bundle",
    "build:esm": "esbuild src/*.ts src/lang/*.ts --platform=node --format=esm --outdir=dist",
    "postbuild": "cd ./dist && rm -rf types.js *.test.js",
    "prepack": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "esbuild": "^0.14.34",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
